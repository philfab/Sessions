{% extends 'base.html.twig' %}

{% block title %}Détail du Stagiaire
{% endblock %}

{% block body %}
	<div class="wrapper">
		<h1>Détail du Stagiaire</h1>
		<p>Nom :
			{{ stagiaire.nom }}</p>
		<p>Prénom :
			{{ stagiaire.prenom }}</p>
		<p>Date de naissance :
			{{ stagiaire.dateNaissance|date('d-m-Y') }}</p>
		<p>Email :
			{{ stagiaire.email }}</p>
		<p>Ville :
			{{ stagiaire.ville }}</p>
		<p>Téléphone :
			{{ stagiaire.telephone }}</p>

		<h2>Sessions inscrites</h2>
		<ul>
			{% for inscription in stagiaire.inscriptions %}
				<li>{{ inscription.session.intitule }}
					(du
					{{ inscription.session.dateDebut|date('d-m-Y') }}
					au
					{{ inscription.session.dateFin|date('d-m-Y') }})</li>
			{% endfor %}
		</ul>
	</div>
{% endblock %}
