{% extends 'base.html.twig' %}

{% block title %}Liste des Modules
{% endblock %}

{% block body %}
	<section class="wrapper">
		<div class="session-list-container wrapper-col">
			<h4>Liste des Modules</h4>
			<div class="module-list-container">
				<ul class="module-list">
					{% for module in modules %}
						<li>{{ module.titre }}
							({{ module.categorie.nom }})
						</li>
					{% else %}
						<li>Aucun module disponible</li>
					{% endfor %}
				</ul>
			</div>
		</div>

		<div class="session-list-container wrapper-col">
			<h4>Ajouter un Module</h4>
			<div class="module-form-container">
				{{ form_start(module_form) }}
				{{ form_widget(module_form) }}
				{{ form_end(module_form) }}
			</div>
		</div>
	</section>
{% endblock %}
